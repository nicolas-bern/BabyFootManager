<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/semantic/semantic.min.css">
    <title>BF Manager</title>
</head> 
<body>

    <script src="/socket.io/socket.io.js"></script>
    <script>

        var socket = io()

        var send = function(){
            var text = document.getElementById('newgame').value
            socket.emit('newgame', text)
        }

        

        var receive = function(partie){
            var game = document.createElement('p')
            game.innerText = partie
            document.getElementById('test').appendChild(game)
        }

        socket.on('newgame', function(partie){
            receive(partie)
        })

    </script>

    <div class="ui fixed inverted menu">
        <a href="/" class="header item">BabyFoot Manager</a>
    </div>

    <div class="ui main container">

        <br>
        <br>
        <br>

        <% if(locals.flash && locals.flash.error) { %>
        <div class="ui negative message">
            <%= flash.error %>
        </div>
        <% } %>

        <br>
        <br>
        <br>

        <div class="ui grid">
            <div class="field">
                <label for="newgame"></label>
                <textarea name="newgame" id="newgame" placeholder="Nouvelle partie" cols="30" rows="2"></textarea>
            </div>
        
            <button type="submit" class="ui blue labeled submit icon button" onclick="send()">
                <i class="icon add"></i>Ajouter
            </button>
        </div>
            

        <div class="ui hidden divider"></div>

        <div class="ui comments">
            <h3 class="ui dividing header">Parties :</h3>
            <br>
            <h3 class="ui header">Parties en cours (<%= parties.length %>) :</h3>
            <br>

            <% for (i=0; i<parties.length; i++) { %>
                <div class="ui grid">

                    <p id="test"><%= parties[i] %></p>

                    <form action="/" method="POST" class="update">
                        <input type="hidden" name="idUpdate" id="idUpdate" value="<%= id[i] %>">
                        <button type="submit" class="ui blue labeled icon button" name="idUpdate" id="idUpdate">
                            <i class="down arrow icon"></i>Terminé
                        </button>
                    </form>

                    <form action="/" method="POST" class="delete">
                        <input type="hidden" name="idDelete" id="idDelete" value="<%= id[i] %>">
                        <button type="submit" class="ui red delete button" name="idDelete" id="idDelete">
                        <i class="icon delete"></i>Supprimer
                        </button>
                    </form>

                </div>

                <div class="ui hidden divider"></div>
                <br>
            <% } %>

            <div class="ui section divider"></div>

            <h3 class="ui header">Parties terminées (<%= partiesT.length %>) :</h3>
            <br>
            <% for (i=0; i<partiesT.length; i++) { %>
                <div class="ui grid">

                    <div class="test" style="color: grey;"><%= partiesT[i] %></div>
                    <div class="ui hidden divider"></div>
                </div>
            <% } %>
        </div>
        
    </div>
    
</body>
</html>